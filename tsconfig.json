{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // This is key for resolving paths
    "allowImportingTsExtensions": true, // Allows .ts in imports if needed
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Set to false if you want tsc to emit JS, but Vite handles that
    "jsx": "preserve",

    /* Linting */
    "strict": true, // Keep this for strict type checking
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* For declarations */
    "declaration": true, // Generates .d.ts files
    "emitDeclarationOnly": true, // Only emit declarations, not JS
    "outDir": "dist" // Output directory for declarations
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"] // Exclude these
}
